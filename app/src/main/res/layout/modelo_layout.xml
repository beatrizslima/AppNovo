<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="240dp"
    android:background="#EEF4E9">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

    <ImageView
        android:id="@+id/imgFilmes"
        android:layout_width="150dp"
        android:layout_height="215dp"
        android:layout_margin="10dp"
        android:src="@drawable/capafilme2"
        android:scaleType="centerCrop"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

       <TextView
       android:id="@+id/txtTituloFilme"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="O Rei da Montanha"
       android:layout_margin="8dp"
       android:textSize="18sp"
       android:textColor="#000"/>

        <TextView
        android:id="@+id/txtSinopse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/descFilme"
        android:layout_margin="10dp"
        android:textColor="@color/black"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RatingBar
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:numStars="5"
                    android:layout_marginLeft="10dp"
                    style="@style/Widget.AppCompat.RatingBar.Small"
                    android:layout_marginTop="15dp"/>

                <TextView
                    android:id="@+id/txtAvaliacaoFilme"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4.5"
                    android:layout_marginLeft="10dp"
                    android:textSize="12sp"
                    android:layout_marginTop="15dp"
                    android:textColor="#000"/>

                <ImageView
                    android:id="@+id/iconShare"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_baseline_share"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="12dp"/>

                <ImageView
                    android:id="@+id/iconRate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_baseline_star_rate"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="12dp"/>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>